<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/lblNum1"
        android:text="Num 1:"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" />


    <EditText
        android:id="@+id/txtNum1"
        android:hint="Ej. 5"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblNum1"
        android:layout_marginTop="8dp"
        android:padding="12dp" />


    <TextView
        android:id="@+id/lblNum2"
        android:text="Num 2:"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNum1"
        android:layout_marginTop="24dp" />


    <EditText
        android:id="@+id/txtNum2"
        android:hint="Ej. 4.8"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblNum2"
        android:layout_marginTop="8dp"
        android:padding="12dp" />


    <TextView
        android:id="@+id/lblRespuesta"
        android:text="Respuesta: ?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNum2"
        android:layout_marginTop="20dp" />


    <Button
        android:id="@+id/btnCalcular"
        android:text="Calcular"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblRespuesta"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white" />


    <RadioGroup
        android:id="@+id/rgoOpciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCalcular"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <RadioButton
            android:id="@+id/optsuma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Sumar" />


        <RadioButton
            android:id="@+id/optresta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Restar" />

        <RadioButton
            android:id="@+id/optmultiplicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Multiplicación" />

        <RadioButton
            android:id="@+id/optdivision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="División" />

        <RadioButton
            android:id="@+id/optExponente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Exponente" />

        <RadioButton
            android:id="@+id/optPorcentaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Porcentaje" />

        <RadioButton
            android:id="@+id/optRaiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Raíz" />

        <RadioButton
            android:id="@+id/optFactorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Factorial" />
    </RadioGroup>

</RelativeLayout>
