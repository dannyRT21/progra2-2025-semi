<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/lblNum1"
        android:text="Num 1:"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" />


    <EditText
        android:id="@+id/txtNum1"
        android:hint="Ej. 5"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblNum1"
        android:layout_marginTop="8dp"
        android:padding="12dp" />


    <TextView
        android:id="@+id/lblNum2"
        android:text="Num 2:"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNum1"
        android:layout_marginTop="24dp" />


    <EditText
        android:id="@+id/txtNum2"
        android:hint="Ej. 4.8"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblNum2"
        android:layout_marginTop="8dp"
        android:padding="12dp" />


    <Button
        android:id="@+id/btnCalcular"
        android:text="Calcular"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spnOpciones"
        android:layout_marginTop="40dp"
        android:padding="16dp"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white" />




<Spinner
    android:id="@+id/spnOpciones"
    android:layout_below="@id/lblRespuesta"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="20dp"
    android:entries="@array/opciones"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblRespuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNum2"
        android:layout_marginTop="26dp"
        android:text="Respuesta: ?"
        android:textSize="18sp"

        android:textStyle="bold" />
</RelativeLayout>
